<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">


    <entity name="Britannia\Domain\Entity\Academy\Academy" table="other_academies">
        <cache usage="NONSTRICT_READ_WRITE" region="day"/>

        <id name="id" type="AcademyId" column="id">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <field name="name"/>
        <field name="createdAt" type="datetime_immutable" nullable="true"/>
        <field name="updatedAt" type="datetime_immutable" nullable="true"/>
    </entity>

</doctrine-mapping>
