<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">


    <entity name="Britannia\Domain\Entity\Student\StudentCourse" table="students_courses">
        <id name="student" association-key="true"/>
        <id name="course" association-key="true"/>

        <many-to-one field="student" target-entity="Britannia\Domain\Entity\Student\Student" inversed-by="studentHasCourses">
            <join-column nullable="false" on-delete="CASCADE" />
        </many-to-one>

        <many-to-one field="course" target-entity="Britannia\Domain\Entity\Course\Course" inversed-by="courseHasStudents">
            <join-column nullable="false" on-delete="CASCADE" />
        </many-to-one>

        <field name="joinedAt" type="date_immutable"/>
        <field name="diagnostic" type="MarkReport"/>
        <field name="exam" type="MarkReport"/>



    </entity>

</doctrine-mapping>
