<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">


    <entity name="Britannia\Domain\Entity\Unit\UnitStudent"
            table="unit_student">

        <id name="student" association-key="true"/>
        <id name="unit" association-key="true"/>

        <embedded name="marks" class="Britannia\Domain\VO\Mark\MarkList" use-column-prefix="false"/>

        <field name="completedAt" nullable="true" type="datetime_immutable"></field>

        <many-to-one field="student" target-entity="Britannia\Domain\Entity\Student\Student"
                     inversed-by="studentHasUnits">
            <join-column nullable="false" on-delete="CASCADE"/>
        </many-to-one>

        <many-to-one field="unit" target-entity="Britannia\Domain\Entity\Unit\Unit" inversed-by="unitHasStudents">
            <join-column nullable="false" on-delete="CASCADE"/>
        </many-to-one>

    </entity>
</doctrine-mapping>


