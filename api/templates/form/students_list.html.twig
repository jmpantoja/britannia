{% block attendance_list_widget %}
    {{ block('date') }}
    {{ block('grid') }}
{% endblock %}

{% block date %}
    <div class="row">
        <div class="col-md-2 no-margin">
            {% set attr = {
                'data-form': 'date',
                'data-goto-bnt': '#change-date',
                'data-today-bnt': '#today',
            } %}

            {{ form_row(form.date, {'attr': attr }) }}
        </div>
        <div class="col-md-1 no-padding">
            <label id="change-date" class="btn btn-primary">Ir</label>
            <label id="today" class="btn btn-success">Hoy</label>
        </div>
    </div>

{% endblock %}

{% block grid %}
    {% for student in form %}
        {{ form_widget(student) }}
    {% endfor %}
{% endblock %}

{% block attendance_widget %}
    {% set missed = form.missed.vars.value | default(null) %}
    {% set status = 'default' %}
    {% if missed is same as('0') %}
        {% set status = 'on' %}
    {% elseif missed is same as('1') %}
        {% set status = 'off' %}
    {% endif %}

    {% set footer = 'student_cell_attendance_footer' %}
    {{ block('student_cell') }}

{% endblock %}

{% block student_cell_attendance_footer %}
    {% if status != 'default' %}
        {% if status == 'off' %}
            <p class="cell-footer">Falta a clase</p>
            {{ form_widget(form.reason, {'attr': {'class': 'reason'}}) }}
        {% else %}
            <p class="cell-footer">Asiste a clase</p>
            {{ form_widget(form.reason, {'attr': {'class': 'reason hidden'}}) }}
        {% endif %}
        {{ form_widget(form.missed, {'attr': {'class': 'missed'}}) }}
    {% endif %}
{% endblock %}


{% block choose_student_row %}
    {% set status = 'on' %}
    <div class="cell-wrapper {{ type | default('') }}">
        <div title="{{ student.name }}" class="cell student-cell {{ status }}" data-student-cell="{{ status }}"
             data-on="&nbsp;" data-off="Ignorar">
            {% set footer = 'student_cell_choose_footer' %}
            {{ block('student_cell_inner') }}
        </div>
    </div>

{% endblock %}

{% block student_cell_choose_footer %}
    {% if status == 'off' %}
        <p class="cell-footer">Ignorar</p>
    {% else %}
        <p class="cell-footer">&nbsp;</p>
    {% endif %}

    {{ form_widget(form, {'attr': {'class': 'missed' }}) }}
{% endblock %}

{% block student_cell %}
    <div class="cell-wrapper {{ type | default('') }}">
        <div title="{{ student.name }}" class="cell attendance-cell {{ status }}" data-student-cell="{{ status }}"
             data-on="Asiste a clase" data-off="Falta a clase">
            {{ block('student_cell_inner') }}
        </div>
    </div>
{% endblock %}

{% block student_cell_inner %}
    {% set path =  student.photo.path | default('shape.jpg') %}
    {% set src = photo_uploader.downloadUrl(path) %}

    <p class="cell-title">{{ student.fullName.reversedMode | truncate(22) }}</p>

    <img class="cell-image" src="{{ src }}"/>
    <div class="cell-alert">
        {% if student.alert.isAlert %}
            <span data-toggle="popover"
                  title="Cuidado"
                  data-content="{{ student.alert.description | raw }}"
                  data-trigger="hover"
                  data-html="true"
                  data-placement="bottom"
                  class="alert-msg fa fa-exclamation-triangle">
                    </span>

        {% endif %}

        {% if student.termsOfUseImageRigths == false %}
            <span data-toggle="popover"
                  title="Cuidado"
                  data-content="No ha aceptado los derechos de imagen"
                  data-trigger="hover"
                  data-placement="bottom"
                  class="alert-msg fa fa-user-secret">
                    </span>
        {% endif %}
    </div>
    {% if footer is defined %}
        {{ block(footer) }}
    {% endif %}

{% endblock %}

{% block course_has_students_widget %}
    <div class="course_has_students"
         data-widget="student_selector"
         data-course="{{ course }}"
         data-endpoint="{{ endpoint }}">
        <div class="course_has_students__selector">
            <input class="search" type="text" placeholder="Buscar"/>
            <ul>
                {% for name, key in students %}
                    {% set class = (finalized or key in selected)? 'selected':'available' %}
                    <li class="{{ class }}" data-id="{{ key }}">{{ name }}</li>
                {% endfor %}
            </ul>
        </div>
        <div class="course_has_students__grid">
            {% for student in form %}
                {{ form_widget(student) }}
            {% endfor %}
        </div>
    </div>
{% endblock %}


{% block course_student_widget %}
    <div class="cell-wrapper {% if frozen %}frozen{% endif %}">
        <div title="{{ student.name }}" class="cell student-cell {{ status }}" data-student-cell="{{ status }}"
             data-on="En activo" data-off="Baja">
            {% set footer = 'course_student_cell_footer' %}
            {{ block('student_cell_inner') }}
        </div>
    </div>
{% endblock %}

{% block course_student_cell_footer %}

    {% if status != 'default' %}
        {% if status == 'off' %}
            <p class="cell-footer">Baja</p>
        {% else %}
            {% if frozen %}
                <p class="cell-footer"> Finalizado</p>
            {% else %}
                <p class="cell-footer"> En activo</p>
            {% endif %}

        {% endif %}
        <div class="student_cell_footer__actions">
            {{ form_widget(form.missed, {'attr': {'class': 'missed'}}) }}
            {% if course.intensive %}
                {{ form_widget(form.singlePaid, {'attr': {'class': 'numOfPaids'}}) }}
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
