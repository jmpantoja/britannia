{% block payment_widget %}

    <script>
        {% autoescape 'js' %}

        jQuery(function ($) {
            $('#sonata-ba-field-container-{{ id }}')
                .toggle_field({
                    hide_values: ['CASH'],
                    children: '.bank_account'
                })
        })
        {% endautoescape %}
    </script>

    <div class="row">
        <div class="col-md-3">
            {{ form_row(form.mode, {legend: true}) }}
        </div>
    </div>

    <div class="row col-md-12 bank_account">
        {{ form_row(form.account, {legend: true}) }}
    </div>


{% endblock %}

