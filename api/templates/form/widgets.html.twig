{% block time_table_widget %}
    <div class="row time_table_title">
        <div class="col-md-2" style="margin-bottom: 4em">
            <legend class="control-label" style=" ">
                Calendario
            </legend>

        </div>
        {% if form.locked is defined %}
        <div class="col-md-10">
            {{ form_row(form.locked) }}
            <p class="notice">sss</p>
        </div>
        {% endif %}
    </div>

    <div id="{{ id }}-row" class="row time_table">
        <div class="col-md-4">
            {{ form_row(form.start) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.end) }}
        </div>
        <div class="col-md-12" style="margin-top: 3em">
            {{ form_row(form.schedule) }}
        </div>
    </div>

    {% if form.locked is defined %}
        <script>
            var el = $('#{{ form.locked.vars.id }}');

            $(function () {
                var notices = {
                    'LOCKED': '',
                    'RESET': '!Cuidado!, se destruiran todas las lecciones ya generadas',
                    'UPDATE': 'Se conservaran las lecciones pasadas',
                }

                var toggle = function (el, value) {
                    var notice = $(el).parents('.form-group').find('.notice');
                    var value = $(el).prop('value')

                    var parent = $('#{{ id }}-row');
                    var locked = (value === 'LOCKED');

                    var inputs = $(parent).find('input');
                    var select = $(parent).find('select');

                    $(inputs).prop('readonly', locked)
                    $(select).select2("readonly", locked);

                    $(notice).text(notices[value])

                    $(el).prop('disabled', false)
                }

                $(el).on('change', function () {
                    toggle($(this))
                });
                toggle($(el))
            })
        </script>
    {% endif %}

{% endblock %}


