{% extends get_admin_template('base_list_field', admin.code) %}

{% block field %}
    {% if object.birthDate is not null %}
        <span class="date">
            {{ object.birthDate | localizeddate('medium', 'none') }}
            &nbsp;
        </span>

        {% if object.adult %}
            <span class="label label-primary label-square">
            {{ date().diff(date(object.birthdate)).y }}
        </span>
        {% else %}
            <span class="label label-warning label-square">
            {{ date().diff(date(object.birthdate)).y }}
        </span>
        {% endif %}
    {% endif %}
{% endblock %}
